@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section StyleInput
{
    <style type="text/css">
        input,
        textarea {
            display: block;
            -webkit-box-shadow: 0 1px 1px 0 rgba(180, 180, 180, 0.1);
            box-shadow: 0 1px 1px 0 rgba(180, 180, 180, 0.1);
            width: 180px;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            padding: 6px 10px;
            border: 1px solid #fff;
            margin-bottom: 0px;
            -webkit-border-radius: 3px;
            border-radius: 3px;
            background: none;
            color: #fff;
        }

            input[type="submit"] {
                cursor: pointer;
                background: #494848;
                border: none;
                color: #fff;
                width: auto;
                cursor: pointer;
                text-transform: uppercase;
                display: inline-block;
                padding: 15px 30px;
                font-size: 1.1em;
                border-radius: 2px;
                letter-spacing: 1px;
                margin-top: 0px;
            }
    </style>
}

@section JavaScriptHeader
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#header-menu").hide();
        });
    </script>
}

<div class="callout-box-6a">
    <div class="row">
        <div class="span10">
            <div class="headline">
                <h3>Get in touch</h3>
            </div>
            <!-- end .headline -->
        </div>
    </div>
</div>

@using (Html.BeginForm("Index", "Contact", FormMethod.Post))
{    
    @Html.AntiForgeryToken()
    <div class="callout-box">
        <div class="row">
            <div class="span12">
                <ul class="contact">
                    <!--<form class="cbp-mc-form">-->
                    <li>
                        <label for="first_name">First Name</label>
                        <input type="text" id="first_name" name="first_name" placeholder="" required="required" />
                    </li>
                    <li>
                        <label for="last_name">Last Name</label>
                        <input type="text" id="last_name" name="last_name" placeholder="" required="required" />
                    </li>
                    <li>
                        <label for="email">Email Address</label>
                        <input type="email" id="email" name="email" placeholder="" required="required" />
                    </li>
                    <li>
                        <label for="phone">Phone Number</label>
                        <input type="text" id="phone" name="phone" placeholder="" required="required" />
                    </li>
                    <li>
                        <label for="message">Message</label>
                        <textarea id="message" name="message" required="required"></textarea>
                    </li>
                    <li>
                        <div style="margin: 30px 0 0;">
                            <input id="submit-button" class="cbp-mc-submit" type="submit" value="SUBMIT" onclick="serviceCall(this);" />
                        </div>
                    </li>
                    <li>
                        <div id="result"></div>
                    </li>
                </ul>
                <!--</form>*/-->
            </div>
        </div>
        <!-- end .row -->
    </div>
}

